<LoginScreen>:
    GridLayout:
        cols: 1
        GridLayout:
            cols: 1
            padding: 15, 15
            spacing: 20,20
            Label:
                text: "User Login"
                font_size: '20sp'
            TextInput:
                id: usr
                hint_text: "Username"
            TextInput:
                id: pwd
                hint_text: "Password"
                password: True
            RelativeLayout:
                Button:
                    text: "Login"
                    size_hint: 0.3, 0.5
                    pos_hint: {'center_x': 0.5, 'center_y': 0.6}
                    on_press: root.log_in(root.ids.usr.text, root.ids.pwd.text)
            Label:
                id: login_fail
                text: ""
        GridLayout:
            cols: 2
            size_hint: 0.2, 0.2
            padding: 10, 10
            spacing: 10, 0
            Button:
                text: "Forgot Password"
                background_color: 1, 1, 1, 0
                opacity: 1 if self.state == 'normal' else 0.5
                color: 0.1, 0.7, 1, 1
            Button:
                text: "Sign up"
                on_press: root.sign_up()
                background_color: 1, 1, 1, 0
                opacity: 1 if self.state == 'normal' else 0.5
                color: 0.1, 0.7, 1, 1

<SignUpScreen>:
    GridLayout:
        cols: 1
        padding: 20, 20
        spacing: 20, 20
        Label:
            text: "Sign up for an account"
        TextInput:
            id: usr
            hint_text: "Username"
        TextInput:
            id: pwd
            hint_text: "Password"
        Button:
            text: "Create account"
            on_press: root.new_account(root.ids.usr.text, root.ids.pwd.text)

<SignUpScreenSuccess>:
    GridLayout:
        cols: 1
        Label:
            text: "Sign up successful"
        Button:
            text: "Log in"
            on_press: root.show_login()

<AppMainScreen>:
    GridLayout:
        cols: 1
        padding: 30, 30
        spacing: 30, 30
        RelativeLayout:
            ImageButton:
                source: 'logout_hover.png' if self.hovered else 'logout_nothover.png'
                size_hint: 0.35, 0.35
                pos_hint: {'center_x': 0.93, 'center_y': 0.8}
                on_press: root.log_out()
        Label:
            text: "How do you feel"
        TextInput:
            id: feeling
            hint_text: "Like: happy, sad, unloved etc."
        Button:
            text: "Enlighten me"
            on_press: root.enlighten(root.ids.feeling.text)
        ScrollView:
            Label:
                id: quote
                text: ""
                text_size: self.width, None
                size_hint_y: None
                height: self.texture_size[1]

<RootWidget>:
    LoginScreen:
        name: "login_screen"
    SignUpScreen:
        name: "sign_up_screen"
    SignUpScreenSuccess:
        name: "sign_up_screen_success"
    AppMainScreen:
        name: "app_main_screen"
